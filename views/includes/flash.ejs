<% if (success && success.length) { %>
<div
  class="alert alert-success flash-message alert-dismissible col-4 offset-4 mb-0 mt-2"
  role="alert"
>
  <p class="mb-0"><%= success %></p>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %> <% if (error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show col-4 offset-4"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
