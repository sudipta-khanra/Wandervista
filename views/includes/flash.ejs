<style>

/* Override Bootstrap grid for smaller screens */
@media (max-width: 576px) {
  .col-4.offset-4 {
    width: 90% !important;
    margin-left: auto !important;
    margin-right: auto !important;
  }
}

@media (min-width: 577px) and (max-width: 768px) {
  .col-4.offset-4 {
    width: 70% !important;
    margin-left: auto !important;
    margin-right: auto !important;
  }
}

@media (min-width: 769px) and (max-width: 992px) {
  .col-4.offset-4 {
    width: 50% !important;
    margin-left: auto !important;
    margin-right: auto !important;
  }
}

/* For larger screens, keep the default col-4 offset-4 (33% width + centered) */


</style>

<% if (success && success.length) { %>
<div
  class="alert alert-success flash-message alert-dismissible col-4 offset-4 mb-0 mt-2"
  role="alert"
>
  <p class="mb-0"><%= success %></p>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %> <% if (error && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show col-4 offset-4"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
