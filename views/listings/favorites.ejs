<% layout("/layouts/boilerplate.ejs")%>

<link rel="stylesheet" href="/css/favorite.css">


<h1 class="page-title">Your Saved Listings</h1>

<% if (favorites.length === 0) { %>
  <p class="empty-message">You haven't saved any listings yet.</p>
<% } else { %>
  <div class="listing-grid">
    <% favorites.forEach(listing => { %>
                <a href="/listings/<%= listing._id %>" class="card-link">

      <div class="listing-card">
        <div class="image-wrapper">
          <img src="<%= listing.image.url %>" alt="<%= listing.title %>">

          <!-- ✅ DELETE button form using DELETE method -->
          <form action="/listings/<%= listing._id %>/save?_method=DELETE" method="POST" class="delete-form">
            <button type="submit" class="delete-btn" title="Remove from favorites">
              <i class="fa-solid fa-trash"></i>
            </button>
          </form>
        </div>

          <div class="card-body">
            <h3><%= listing.title %></h3>
            <p>₹<%= (listing.price * 1.18).toFixed(0) %> /night</p>
          </div>
      </div>
              </a>

    <% }) %>
  </div>
<% } %>
