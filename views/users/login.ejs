<% layout("/layouts/boilerplate.ejs")%>

<body>
  <div class="row mt-3">
    <div class="col-6 offset-3">
      <h2>Log in to Wanderlust</h2>
      <form
        method="POST"
        action="/login"
        novalidate
        class="needs-validation pevent-default"
      >
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            name="username"
            id="username"
            type="text"
            placeholder="enter your name"
            class="form-control"
            required
          />
        </div>

        <!-- <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              name="email"
              id="email"
              type="text"
              placeholder="write email here"
              class="form-control"
              rows="4"
              required
            >
          </div> -->

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            placeholder="password"
            class="form-control"
            rows="4"
            required
          />
        </div>
        <button class="btn btn-success">Log In</button>
      </form>

<hr class="my-4 w-25 mx-auto" />


      <div class="text-center">

        <a href="/auth/github" class="btn btn-outline-dark">
          <i class="bi bi-github"></i> Login with GitHub
        </a>
      </div>
    </div>
  </div>
</body>
